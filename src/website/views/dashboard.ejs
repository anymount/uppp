<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Discord Auth System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --bg-color: #000000;
            --text-color: #ffffff;
            --nav-bg: rgba(0, 0, 0, 0.8);
            --nav-border: rgba(255, 255, 255, 0.1);
            --accent-color: #333333;
            --p-color: #aaa;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: var(--bg-color);
            color: var(--text-color);
            min-height: 100vh;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
            background: var(--nav-bg);
            backdrop-filter: blur(10px);
            border: 1px solid var(--nav-border);
            position: fixed;
            width: 90%;
            max-width: 1200px;
            top: 20px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1000;
            transition: all 0.3s ease;
            border-radius: 15px;
        }

        .navbar:hover {
            background: var(--nav-bg);
            border-color: rgba(255, 255, 255, 0.2);
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 0;
            font-size: 1.8rem;
            font-weight: 800;
            text-decoration: none;
            background: linear-gradient(45deg, #8a2be2, #4b0082);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
        }

        .nav-links {
            display: flex;
            gap: 2rem;
        }

        .nav-links a {
            color: var(--text-color);
            text-decoration: none;
            font-size: 1rem;
            font-weight: 500;
            padding: 0.5rem 1.2rem;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .nav-links a:hover {
            background: rgba(255, 255, 255, 0.1);
            transform: translateY(-2px);
        }

        .container {
            max-width: 1200px;
            margin: 120px auto 40px;
            padding: 2rem;
            background: rgba(0, 0, 0, 0.8);
            border: 1px solid rgba(138, 43, 226, 0.2);
            border-radius: 15px;
            backdrop-filter: blur(10px);
        }

        .users-table {
            margin-top: 2rem;
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: rgba(0, 0, 0, 0.5);
            border-radius: 8px;
        }

        th, td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        th {
            background: rgba(138, 43, 226, 0.1);
            font-weight: 600;
        }

        td img {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            border: 2px solid #333;
        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
        }

        .delete-btn, .pull-btn {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
        }

        .delete-btn {
            background: rgba(255, 0, 0, 0.2);
            color: #ff0000;
        }

        .pull-btn {
            background: rgba(0, 255, 0, 0.2);
            color: #00ff00;
        }

        .delete-btn:hover {
            background: rgba(255, 0, 0, 0.4);
        }

        .pull-btn:hover {
            background: rgba(0, 255, 0, 0.4);
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.8);
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .modal-content {
            background: var(--bg-color);
            padding: 2rem;
            border-radius: 15px;
            border: 1px solid rgba(138, 43, 226, 0.2);
            width: 90%;
            max-width: 500px;
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .close-modal {
            font-size: 1.5rem;
            cursor: pointer;
            color: var(--text-color);
        }

        .modal input {
            width: 100%;
            padding: 0.8rem;
            margin-bottom: 1rem;
            border: 1px solid rgba(138, 43, 226, 0.2);
            border-radius: 8px;
            background: rgba(0, 0, 0, 0.5);
            color: var(--text-color);
        }

        .modal-buttons {
            display: flex;
            gap: 1rem;
            justify-content: flex-end;
        }

        .confirm-btn, .cancel-btn {
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .confirm-btn {
            background: linear-gradient(45deg, #8a2be2, #4b0082);
            color: white;
        }

        .cancel-btn {
            background: rgba(255, 0, 0, 0.2);
            color: #ff0000;
        }

        .confirm-btn:hover {
            transform: translateY(-2px);
        }

        .cancel-btn:hover {
            background: rgba(255, 0, 0, 0.4);
        }

        @media (max-width: 768px) {
            .navbar {
                width: 95%;
                padding: 1rem;
            }

            .nav-links {
                gap: 1rem;
            }

            .nav-links a {
                padding: 0.5rem;
            }

            .container {
                margin: 100px auto 20px;
                padding: 1rem;
            }

            .modal-content {
                width: 95%;
                padding: 1rem;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <a href="/" class="logo">DreamCria</a>
        <div class="nav-links">
            <a href="/dashboard">Inicio</a>
            <a href="/dashboard/configuracoes">Configurações</a>
            <a href="/auth/logout">Sair</a>
            <a href="/dashboard/painel">Painel</a>
        </div>
    </nav>

    <% if (typeof message !== 'undefined' && message) { %>
        <div class="toast <%= message.type %>">
            <i class="fas <%= message.type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle' %>"></i>
            <%= message.text %>
        </div>
    <% } %>

    <div class="container">
        <div class="header">
            <div class="user-info">
                <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="Avatar">
                <h2><%= user.username %></h2>
            </div>
        </div>

        <div class="users-table">
            <h3 class="table-header">Usuários Registrados</h3>
            <table>
                <thead>
                    <tr>
                        <th>Avatar</th>
                        <th>Username</th>
                        <th>ID Discord</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% registeredUsers.forEach(registeredUser => { %>
                        <tr>
                            <td><img src="https://cdn.discordapp.com/avatars/<%= registeredUser.id %>/<%= registeredUser.avatar %>.png" alt="Avatar"></td>
                            <td><%= registeredUser.username %></td>
                            <td><%= registeredUser.id %></td>
                            <td>
                                <div style="display: flex; gap: 10px;">
                                    <a href="/dashboard/user/delete/<%= registeredUser.id %>" class="delete-btn">
                                        <i class="fas fa-trash"></i>
                                        Deletar
                                    </a>
                                    <button onclick="openModal('<%= registeredUser.id %>')" class="pull-btn">
                                        <i class="fas fa-download"></i>
                                        Puxar
                                    </button>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <div id="pullModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Puxar Usuário</h3>
                <span class="close-modal" onclick="closeModal()">&times;</span>
            </div>
            <form id="pullForm" action="/dashboard/user/pull" method="POST">
                <input type="hidden" id="userId" name="userId">
                <input type="text" id="serverId" name="serverId" placeholder="ID do Servidor" required>
                <div class="modal-buttons">
                    <button type="submit" class="confirm-btn">Confirmar</button>
                    <button type="button" class="cancel-btn" onclick="closeModal()">Cancelar</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function openModal(userId) {
            document.getElementById('pullModal').style.display = 'flex';
            document.getElementById('userId').value = userId;
        }

        function closeModal() {
            document.getElementById('pullModal').style.display = 'none';
        }

        window.onclick = function(event) {
            if (event.target == document.getElementById('pullModal')) {
                closeModal();
            }
        }
    </script>
</body>
</html>